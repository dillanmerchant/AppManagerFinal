<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/fraudapp_icon"
            android:layout_width="32dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/fraudapp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fraudapp_icon"
            android:text="Application name"

            android:textSize="12dp"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:id="@+id/fraudapp_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fraudapp_name"
            android:layout_toRightOf="@id/fraudapp_icon"/>

        <TextView
            android:id="@+id/fraudapp_last_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fraudapp_icon"
            android:layout_below="@id/fraudapp_name"
            android:text="date"
            android:textSize="12dp"
            android:layout_marginLeft="6dp"
            />

        <ImageView
            android:id="@+id/fraudapps_delete"
            android:src="@drawable/ic_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>