<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/bgImageView"
        android:background="@drawable/header"
        android:layout_height="@dimen/_75sdp"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/about_back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:src="@drawable/ic_back_arrow"
            android:layout_height="@dimen/_20sdp" />
        <TextView
            android:id="@+id/description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:text="About Us"
            android:fontFamily="@font/biosans_light"
            android:textSize="@dimen/_18sdp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo_top"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ic_logo_about"
        android:layout_below="@id/bgImageView"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/apptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/biosans_regular"
        android:textSize="@dimen/_20sdp"
        android:layout_below="@id/logo_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>

